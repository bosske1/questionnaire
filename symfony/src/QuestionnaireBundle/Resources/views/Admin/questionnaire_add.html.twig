<script type="text/template" id="tpl-add-questionnaire">
    <div id="main-container">
        <img class="img-responsive" id="background" src="img/wood1.jpg">
        <!--==============================Header==================================-->
        <header>
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
                <li role="presentation"><a href="#aboutus" aria-controls="aboutus" role="tab" data-toggle="tab">About Us</a></li>
                <li role="presentation"><a href="#contact" aria-controls="contact" role="tab" data-toggle="tab">Contact</a></li>
                <li role="presentation" class="brand"><img class="img-responsive" alt="Brand" src="img/logo2.png"></li>
            </ul>
        </header>

        <!--===========================Main content===============================-->
        <section>
            <div class="box">

                <form id="questionnaire_add" name="questionnaire_add" role="form" class="fedit" method="post">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <strong><input type="text" class="form-control" id="name" name="name"></strong>
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea class="form-control" rows="5" id="description" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="type">Category:</label>
                        <select class="form-control" id="category" name="category">
                            <!--
                                <%= this.populateCategories() %> cannot work,
                                as backbone is s*** and this method is NOT fired after render process, which doesn't make sense at all!

                            populated with this.populateCategories() in postRender() -->
                        </select>
                    </div>
                    <button type="submit" class="btn btn-warning btn-add">Add!</button>
                </form>
            </div>
        </section>

        <!--==============================Footer=============================-->
        <div id="footer">
            <p>2015</p>
        </div>

    </div>
</script>