<script type="text/template" id="tpl-question-radioold">
    <div id="main-container">
        <!--==============================Header==================================-->
        <header>
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
                <li role="presentation"><a href="#aboutus" aria-controls="aboutus" role="tab" data-toggle="tab">About Us</a></li>
                <li role="presentation"><a href="#contact" aria-controls="contact" role="tab" data-toggle="tab">Contact</a></li>
                <li role="presentation" class="brand"><img class="img-responsive" alt="Brand" src="img/Logo-2.jpg"></li>
            </ul>
        </header>

        <!--===========================Main content===============================-->
        <section>
            <div class="box">
                <img class="img-responsive inquest" alt="Brand" src="img/Logo-2.jpg">
                <div id="error-message-container"></div>
                <% if (typeof question.attachments !== 'undefined' && question.attachments.length > 0) { %>
                <div class="img-responsive  img-box" id="img-attachment">
                    <img class="img-responsive" src="<%= question.attachments[0].path %>">
                </div>
                <% } %>
                <div class="question">
                    <strong><%= question.title %></strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <strong><%= question.content %></strong>
                </div>
                <form>
                    <label  class="col-sm-2 control-label control-label-form2">Antwort:</label>
                    <div class="radio-form2">
                        <% _.each(question.potentialAnswers, function(answer, key){ %>
                        <div class="radio">
                            <label>
                                <input type="radio" name="answer" id="optionsRadios_<%= answer.id %>" value="<%= answer.id %>"
                                <% if (key == 0) { %>
                                checked
                                <% } %>
                                >
                                <strong><%= answer.answer %></strong>
                            </label>
                        </div>
                        <% }); %>
                    </div>
                </form>
                <div class="timer">

                    <div class="progress">
                        <div id="progress-bar" class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60"
                             aria-valuemin="0" aria-valuemax="100" style="width:0%">
                        </div>
                    </div>

                </div>
                <div class="timerbutton row">
                    <div class="quesnum col-lg-8">
                        <div class="warning">
                            <p><strong>Bitte Weiter Button innerhalb von <%= question.tickLength %> Sekunden drucken!</strong></p>
                        </div>
                    </div>

                    <div class="questitle col-lg-2">
                        <button type="button" id="nextQuestionBtn" class="btn btn-warning btn-form1">Weiter</button>
                    </div>
                </div>
            </div>
        </section>

        <!--==============================Footer=============================-->
        <div id="footer">
            <p>2015</p>
        </div>
    </div>
</script>
