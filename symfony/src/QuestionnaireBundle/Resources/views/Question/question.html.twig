
<script type="text/template" id="tpl-question-input">
    <div id="main-container">
        <!--==============================Header==================================-->
        <header>
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Home</a></li>
                <li role="presentation"><a href="#aboutus" aria-controls="aboutus" role="tab" data-toggle="tab">About Us</a></li>
                <li role="presentation"><a href="#contact" aria-controls="contact" role="tab" data-toggle="tab">Contact</a></li>
                <li role="presentation" class="brand"><img class="img-responsive" alt="Brand" src="img/logo2.png"></li>
            </ul>
        </header>

        <!--===========================Main content===============================-->
        <section>
            <div class="box">
                <img class="img-responsive inquest" alt="Brand" src="img/logo2.png">
                <div class="question">
                <div class="quesnum col-sm-2">
                    <h5><strong><%= question.title %></strong></h5>
                </div>

                <div class="questitle col-sm-10">
                    <strong><%= question.content %></strong>
                </div>
                <form class="questansw col-sm-10">
                    <select class="form-control grey">
                        <option>2860</option>
                        <option>3350</option>
                        <option>2500</option>
                        <option>2731</option>
                    </select>
                </form>


                </div>

                <div class="timer"></div>
                <div class="warning">
                    <p><strong>Bitte beantworten Sie die Frage innerhalb von 30 Sekunden!</strong></p>
                </div>
                <button type="button" id="nextQuestionBtn" class="btn btn-default btn-form1">Weiter</button>
            </div>
        </section>

        <!--==============================Footer=============================-->
        <div id="footer">
            <p>2015</p>
        </div>

    </div>

</script>

<script type="text/template" id="tpl-question-radio">
