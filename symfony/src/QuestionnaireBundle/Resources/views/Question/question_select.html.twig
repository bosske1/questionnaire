<script type="text/template" id="tpl-question-select">
    <div class="top-left"></div>
    <div class="top-right"></div>
    <div class="bottom-left"></div>
    <div class="bottom-right"></div>
    <div id="wrapper2">
        <div id="wrapper3">
            <div class="container">
                <div class="row mb-50" >
                    <div class="col-md-12">
                        <a href="#"><img class="logo" src="img/logo.svg" width="150" alt=""></a>
                    </div>
                </div>
            </div>
            <section id="page">
                <div class="container">
                    <div class="row mb-50">
                        <div class="col-md-6 col-md-offset-3 text-center">
                            <img class="responsive-image" src="img/Frage03200---2010-11-30_00.png" alt="">
                        </div>
                    </div>
                    <div class="row mb-50">
                        <div class="col-md-2">
                            <p><%= question.title %>:</p>
                        </div>
                        <div class="col-md-6 col-md-offset-1 frage">
                            <p><%= question.content %></p>
                        </div>

                    </div>

                    <div class="row mb-50">
                        <div class="col-md-2">
                            <p>Antwort:</p>
                        </div>
                        <div class="col-md-6 col-md-offset-1">
                            <select class="form-control form-control-4 col-md-6 col-sm-6 col-xs-6">
                                <% _.each(question.potentialAnswers, function(answer, key){ %>

                                <option value="<%= answer.answer %>"><%= answer.answer %></option>

                                <% }); %>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div id="progressTimer"></div>

                        </div>
                    </div>
                </div>
            </section>
            <footer>
                {% include 'QuestionnaireBundle:Question:question_button_next_with_counter.html.twig' %}
            </footer>
        </div>
    </div>
</script>
